<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!-- Define the layout for the custom ArrayList Adapter -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="115dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/readingImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/dateTitle"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="Date:"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/readingImg"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="27-04--2018"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/dateTitle"/>

        <TextView
        android:id="@+id/timeTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/readingImg"
        android:layout_below="@id/dateTv"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="12:52:10"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/dateTitle"
            android:layout_below="@+id/dateTv"/>

        <TextView
            android:id="@+id/tempTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Temperature:"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/readingImg"
            android:layout_below="@id/timeTv"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tempTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/timeTitle"
            android:layout_below="@+id/timeTv"/>

        <TextView
            android:id="@+id/humidTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Humidity:"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/readingImg"
            android:layout_below="@id/tempTv"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/humidTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="37"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/tempTitle"
            android:layout_below="@+id/tempTv"/>

        <TextView
            android:id="@+id/statusTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/readingImg"
            android:layout_below="@id/humidTv"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Heating Circuit Running (Manual Override)"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/dateTitle"
            android:layout_below="@+id/humidTv"/>

    </RelativeLayout>

</LinearLayout>